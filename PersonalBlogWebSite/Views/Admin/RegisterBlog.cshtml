@model PersonalBlogWebSite.Models.EntitiesClass.Blog
@{
    ViewBag.Title = "RegisterBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <br />
    @using (Html.BeginForm("RegisterBlog", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.LabelFor(x => x.BlogTitle)
        @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.BlogExplanation)
        @Html.TextAreaFor(x => x.BlogExplanation, 15, 1, new { @class = "form-control" })
        <br />
        <fieldset style="background-color:#eeeeee">
            <div style="margin-left:1%">
                <h5><b> Fotoğraf Yükle</b></h5>
                <br />
                <input type="file" name="postedFile" />
                <p style="color:gray;margin-top:1%;margin-bottom:1%"><b>veya</b></p>
                <h5><b>Fotoğraf'ın İnternet Urlsi ile Fotoğraf Yükle</b></h5>
                @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
                <br />
            </div>
        </fieldset>
        <br />
        @Html.TextBoxFor(x => x.BlogCreateDate, new {@Value=DateTime.Now.ToString("dd.MM.yyyy"),@type="hidden"})
        <br />
        <button class="button-blue">Ekle</button>
     }

</body>
</html>

